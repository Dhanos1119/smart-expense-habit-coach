generator client {
  provider = "prisma-client-js"
  // no output here â€” let Prisma generate runtime files into node_modules/.prisma/client
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Models =====

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  expenses  Expense[]
}

model Expense {
  id        Int      @id @default(autoincrement())
  amount    Float
  currency  String   @default("LKR")
  note      String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
