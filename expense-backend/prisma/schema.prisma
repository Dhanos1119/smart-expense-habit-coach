generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String?
  provider  String    @default("local")
  name      String?
  avatarUrl String?
  monthlyBudget Float? 
  createdAt DateTime  @default(now())
  expenses  Expense[]
}

model Expense {
  id        Int       @id @default(autoincrement())
  amount    Float
  currency  String    @default("LKR")
  note      String?
  category  String    @default("Other")   // ðŸ”¥ FIX
  date      DateTime?                     // ðŸ”¥ FIX (expense date)
  userId    Int
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])
}
